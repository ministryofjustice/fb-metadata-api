{
  "$id": "http://gov.uk/schema/v1.0.0/service/base",
  "_name": "service.base",
  "title": "Base service schema",
  "description": "Base schema for a service",
  "type": "object",
  "properties": {
    "_id": {
      "const": "service.base"
    },
    "_type": {
      "const": "service.base"
    },
    "service_id": {
      "type": "string"
    },
    "service_name": {
      "type": "string"
    },
    "version_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "created_by": {
      "type": "string"
    },
    "locale": {
      "$ref": "service.locale"
    },
    "configuration": {
      "$ref": "config.service"
    },
    "pages": {
      "type": "array",
      "items": {
        "$ref": "definition.page"
      }
    }
  },
  "required": [
    "_id",
    "_type",
    "service_id",
    "service_name",
    "created_by",
    "locale",
    "configuration",
    "pages"
  ],
  "additionalProperties": false
}
